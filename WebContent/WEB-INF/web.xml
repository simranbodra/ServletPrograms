<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Servlets</display-name>
  <welcome-file-list>
    <welcome-file>/Home.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>PreLoginServlet</servlet-name>
    <servlet-class>com.bridgelabz.servlets.controller.PreLoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PreLoginServlet</servlet-name>
    <url-pattern>/PreLoginServlet</url-pattern>
  </servlet-mapping>
  <filter>
		<filter-name>LoginFilter</filter-name>
		<filter-class>com.bridgelabz.servlets.filter.LoginFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>LoginFilter</filter-name>
		<url-pattern>/LoginServlet</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>com.bridgelabz.servlets.controller.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/LoginServlet</url-pattern>
	</servlet-mapping>
	<servlet>
	<servlet-name>LogoutServlet</servlet-name>
	<servlet-class>com.bridgelabz.servlets.controller.LogoutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	<servlet-name>LogoutServlet</servlet-name>
	<url-pattern>/ss</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>PreForgetPasswordServlet</servlet-name>
		<servlet-class>com.bridgelabz.servlets.controller.ForgetPasswordServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>PreForgetPasswordServlet</servlet-name>
		<url-pattern>/ForgetPassword</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SendMailServlet</servlet-name>
		<url-pattern>/SendMailServlet</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>SendMailServlet</servlet-name>
		<servlet-class>com.bridgelabz.servlets.controller.SendMailServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ResetPasswordServlet</servlet-name>
		<url-pattern>/PasswordServlet</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ResetPasswordServlet</servlet-name>
		<servlet-class>com.bridgelabz.servlets.controller.ResetPasswordServlet</servlet-class>
	</servlet>
	<listener>
	<listener-class>com.bridgelabz.servlets.listener.MySessionListener</listener-class>
	</listener>
	
	<servlet>
	<servlet-name>PreRegisterServlet</servlet-name>
	<servlet-class>com.bridgelabz.servlets.controller.PreRegisterServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	<servlet-name>PreRegisterServlet</servlet-name>
	<url-pattern>/PreRegister</url-pattern>
	</servlet-mapping>
	<filter>
	<filter-name>RegisterFilter</filter-name>
	<filter-class>com.bridgelabz.servlets.filter.RegisterFilter</filter-class>
	</filter>
	<filter-mapping>
	<filter-name>RegisterFilter</filter-name>
	<url-pattern>/Registration</url-pattern>
	</filter-mapping>
	<servlet>
	<servlet-name>RegistrationServlet</servlet-name>
	<servlet-class>com.bridgelabz.servlets.controller.RegistrationServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	<servlet-name>RegistrationServlet</servlet-name>
	<url-pattern>/Registration</url-pattern>
	</servlet-mapping>
</web-app>